{% extends 'base.html.twig' %}

{% block title %}Perfil - App{% endblock %}

{% block body %}
    <div class="wrapper">
        <!-- Top Navbar -->
        {{ include('menu/topNavBar.html.twig') }}
        <!-- /.topNavbar -->

        <!-- Side Navbar -->
        {{ include('menu/sideNavBar.html.twig', {'employee': employee, 'sideNavBar_active': 'profile'}) }}
        <!-- /.sideNavbar -->

        <!-- Content Wrapper -->
        {# EN AQUEST DIV VA EL CONTINGUT #}
        <div class="content-wrapper">

            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">Perfil de {{ employee.name }}</h1>
                        </div>
                        <div class="col-sm-6">
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content-header -->

            <!-- Main Container -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-6">

                            <!-- Widget user -->
                            <div class="card card-widget widget-user">
                                <div class="widget-user-header text-white"
                                     style="background: url('https://madridsecreto.co/wp-content/uploads/2020/04/foto-madrid-alcala-henares.jpg') center center;">
                                    <h3 class="widget-user-username text-right"> {{ employee.name }} </h3>
                                    <h5 class="widget-user-desc text-right"> {{ employee.surnames }} </h5>
                                </div>
                                <div class="widget-user-image">
                                    <img class="img-circle elevation-2"
                                         src="https://cdn3.f-cdn.com/contestentries/1376995/30494909/5b566bc71d308_thumb900.jpg"
                                         alt="User Avatar">
                                </div>
                                <div class="card-footer">
                                    <div class="row">
                                        <div class="col-sm-6 border-right">
                                            <div class="description-block">
                                                <h5 class="description-header">Email</h5>
                                                <span> {{ employee.email}} </span>
                                            </div>
                                            <!-- /.description-block -->
                                        </div>
                                        <!-- /.col -->
                                        <div class="col-sm-3 border-right">
                                            <div class="description-block">
                                                <h5 class="description-header">Num Telèfon</h5>
                                                <span class="description-text"> {{ employee.phoneNumber }} </span>
                                            </div>
                                            <!-- /.description-block -->
                                        </div>
                                        <!-- /.col -->
                                        <div class="col-sm-3">
                                            <div class="description-block">
                                                <h5 class="description-header">NIF</h5>
                                                <span class="description-text"> {{employee.nif }} </span>
                                            </div>
                                            <!-- /.description-block -->
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                    <!-- /.row -->
                                </div>
                            </div>
                            <!-- /.widget-user -->
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
{#
                    <div class="container-fluid mb-3">
                        <div class="row d-flex justify-content-right">
                            <strong><i class="fas fa-pencil-alt" data-toggle="modal" data-target="#myModal"></i> Editar perfil</strong>
                        </div>
                    </div>#}

                    <div class="d-flex mb-3 flex-row-reverse">
                        <div class="p-2" data-toggle="modal" data-target="#myModal">
                            <strong><i class="fas fa-pencil-alt" ></i> Editar perfil</strong>
                        </div>
                    </div>

                    <!-- Modal Edit Profile -->
                    {{ include('modals/edit_profile.html.twig') }}
                    <!-- /.edit_profileModal -->

                    <!-- About Me Box -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Informació personal</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <strong><i class="fas fa-birthday-cake"></i> Data de naixement</strong>

                            <p class="text-muted"> {{ employee.birthday|date("d/m/Y") }} </p>

                            <hr>

                            <strong><i class="fas fa-map-marker-alt mr-1"></i> Adreça</strong>

                            <p class="text-muted"> {{employee.address }} </p>

                            <hr>

                            <strong><i class="fas fa-address-card"></i> Codi Postal</strong>

                            <p class="text-muted"> {{employee.postcode }} </p>

                            <hr>

                            <strong><i class="fas fa-user-md"></i> Numero de la Seguretat Social</strong>

                            <p class="text-muted"> {{employee.nss }} </p>

                            <hr>

                            <strong><i class="far fa-file-alt mr-1"></i> Notes</strong>

                            <p class="text-muted"> {{employee.notes }} 
                            </p>

                            <hr>
                            <strong><i class="fas fa-users"></i> Xarxes Socials</strong>
                            <div>
                                <a href="{{ employee.snsLinkedin }}" target= "_blank" class="icon-block">
                                    <i class="fab fa-linkedin fa-3x"></i>
                                </a>

                                <a href="{{ employee.snsTwitter }}" target= "_blank" class="icon-block">
                                    <i class="fab fa-twitter fa-3x"></i>
                                </a>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Main Footer -->
        {{ include('footers/footerDashboard.html.twig') }}
    </div>
    <!-- ./wrapper -->
{% endblock %}