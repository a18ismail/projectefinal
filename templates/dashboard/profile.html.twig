                  <h5 class="widget-user-desc text-right">Programador FP</h5>
                </div>
                <div class="widget-user-image">
                  <img class="img-circle elevation-2"
                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQ5_LGBtY8DWoTjx6nxMzYWL4qdZzpIJwdGlZdayGvGO4XkxRd_&usqp=CAU"
                    alt="User Avatar">
                </div>
                <div class="card-footer">
                  <div class="row">
                    <div class="col-sm-4 border-right">
                      <div class="description-block">
                        <h5 class="description-header">EMAIL</h5>
                        <span>mike@wazowski.com</span>
                      </div>
                      <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4 border-right">
                      <div class="description-block">
                        <h5 class="description-header">PHONE NUMBER</h5>
                        <span class="description-text">696969696</span>
                      </div>
                      <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4">
                      <div class="description-block">
                        <h5 class="description-header">NIF</h5>
                        <span class="description-text">69696969A</span>
                      </div>
                      <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                  </div>
                  <!-- /.row -->
                </div>
              </div>
              <!-- /.widget-user -->
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
<strong><i class="fas fa-pencil-alt" data-toggle="modal" data-target="#myModal"></i> Editar perfil</strong>

          <hr>

          <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
              <div class="modal-content">

                <div class="modal-header">
                  <h4 class="modal-title">Editar la teva informació</h4>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                  </button>
                </div>
                <div class="modal-body">
                  <!-- form start -->
                  <form role="form">
                    <div class="card-body">

                      <div class="form-group"><i class="fas fa-envelope"></i>
                        <label for="inputEmail">Email address</label>
                        <input type="email" class="form-control" id="inputEmail" placeholder="Enter email">
                      </div>

                      <div class="form-group"><i class="fas fa-phone"></i>
                        <label for="inputPhone">Phone Number</label>
                        <input type="phone" class="form-control" id="inputPhone" placeholder="Phone">
                      </div>

                      <div class="form-group"><i class="fas fa-map-marker-alt mr-1"></i>
                        <label for="inputAddress">Address</label>
                        <input type="address" class="form-control" id="inputAddress" placeholder="Address">
                      </div>

                      <div class="form-group"><i class="fas fa-address-card"></i>
                        <label for="inputPostcode">Postcode</label>
                        <input type="postcode" class="form-control" id="inputPostcode" placeholder="Postcode">
                      </div>

                      <div class="form-group"><i class="far fa-file-alt mr-1"></i>
                        <label for="inputPassword">Notes</label>
                        <textarea class="form-control" id="inputNotes" rows="5"></textarea>
                      </div>


                      <div class="form-group"><i class="fas fa-image"></i>
                        <label for="inputProfilePic">Profile pic</label>
                        <div class="input-group">
                          <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputProfilePic">
                            <label class="custom-file-label" for="inputProfilePic">Choose file</label>
                          </div>
                          <div class="input-group-append">
                            <span class="input-group-text" id="">Upload</span>
                          </div>
                        </div>
                      </div>

                      <div class="form-group"><i class="fas fa-image"></i>
                        <label for="inputBackground">Background Image</label>
                        <div class="input-group">
                          <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputBackground">
                            <label class="custom-file-label" for="inputBackground">Choose file</label>
                          </div>
                          <div class="input-group-append">
                            <span class="input-group-text" id="">Upload</span>
                          </div>
                        </div>
                      </div>
                      <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="inputCheck">
                        <label class="form-check-label" for="inputCheck">Check me out</label>
                      </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </form>

                </div>
                <div class="modal-footer justify-content-between">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
              <!-- /.modal-content -->
            </div>
          </div>
          <!-- About Me Box -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">About Me</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <strong><i class="fas fa-birthday-cake"></i> Birthday</strong>

              <p class="text-muted">69/69/69</p>

              <hr>

              <strong><i class="fas fa-map-marker-alt mr-1"></i> Address</strong>

              <p class="text-muted">Malibu, California</p>

              <hr>

              <strong><i class="fas fa-address-card"></i> Postcode</strong>

              <p class="text-muted">69696</p>

              <hr>

              <strong><i class="fas fa-user-md"></i> NSS</strong>

              <p class="text-muted">numero seguridad social</p>

              <hr>

              <strong><i class="far fa-file-alt mr-1"></i> Notes</strong>

              <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.
              </p>

              <hr>
              <strong><i class="fas fa-users"></i> Social Networks</strong>
              <div>
                <a href="#" class="icon-block">
                  <i class="fab fa-linkedin fa-3x"></i>
                </a>

                <a href="#" class="icon-block">
                  <i class="fab fa-twitter fa-3x"></i>
                </a>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Main Footer -->
        {{ include('footers/footerDashboard.html.twig') }}
    </div>
    <!-- ./wrapper -->
{% endblock %}