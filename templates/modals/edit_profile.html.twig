{% block modal_edit_profile %}

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title">Editar la teva informació</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!-- form start -->
                <form role="form" action="{{ path('editProfile') }}" method= "POST">
                    <div class="modal-body">
                        <div class="card-body">

                            <div class="form-group"><i class="fas fa-envelope"></i>
                                <label for="inputEmail">Email address</label>
                                <input type="email" class="form-control" id="inputEmail" name="inputEmail" value= " {{ employee.email}} " placeholder="Enter email">
                            </div>

                            <div class="form-group"><i class="fas fa-phone"></i>
                                <label for="inputPhone">Phone Number</label>
                                <input type="text" class="form-control" id="inputPhone" name="inputPhone" value= " {{ employee.phoneNumber}} " placeholder="Phone">
                            </div>

                            <div class="form-group"><i class="fas fa-map-marker-alt mr-1"></i>
                                <label for="inputAddress">Address</label>
                                <input type="text" class="form-control" id="inputAddress" name="inputAddress" value= " {{ employee.address}} " placeholder="Address">
                            </div>

                            <div class="form-group"><i class="fas fa-address-card"></i>
                                <label for="inputPostcode">Postcode</label>
                                <input type="text" class="form-control" id="inputPostcode" name="inputPostcode" value= " {{ employee.postcode}} " placeholder="Postcode">
                            </div>

                            <div class="form-group"><i class="far fa-file-alt mr-1"></i>
                                <label for="inputNotes">Notes</label>
                                <textarea class="form-control" id="inputNotes" name="inputNotes" rows="5"> {{ employee.notes}} </textarea>
                            </div>

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <div class="modal-footer justify-content-right">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
    </div>

{% endblock %}